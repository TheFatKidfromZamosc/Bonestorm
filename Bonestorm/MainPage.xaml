<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bonestorm.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <DatePicker
                x:Name="dpData"
                MinimumDate="2003-02-01"
                />
            <Button
                x:Name="Ameryka"
                Text="USD" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="BcurrencyUSD"
                HorizontalOptions="Fill" 
                />
            <Label x:Name="textCurrencyUSD" Text=""></Label>

            <Button
     x:Name="JanPawelSobieski3"
     Text="EUR" 
     SemanticProperties.Hint="Counts the number of times you click"
     Clicked="BcurrencyEUR"
     HorizontalOptions="Fill" 
     />
            <Label x:Name="textCurrencyEUR" Text=""></Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
